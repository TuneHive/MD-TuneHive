<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical"
    android:background="@color/darkgrey">

    <!-- Album cover -->
    <ImageView
        android:id="@+id/albumCover"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/album_cover_desc"
        android:scaleType="centerCrop"
        android:src="@drawable/sample_album_cover" />

    <!-- Song details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <!-- Song title -->
        <TextView
            android:id="@+id/albumTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/song_title_text"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:fontFamily="sans-serif-medium" />

        <!-- Artist name -->
        <TextView
            android:id="@+id/artistName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/artist_name_text"
            android:textColor="#80FFFFFF"
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:fontFamily="sans-serif" />
    </LinearLayout>

    <!-- Options button -->
    <ImageView
        android:id="@+id/optionsMenu"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_more_horz"
        android:contentDescription="@string/options_btn_text" />
</LinearLayout>